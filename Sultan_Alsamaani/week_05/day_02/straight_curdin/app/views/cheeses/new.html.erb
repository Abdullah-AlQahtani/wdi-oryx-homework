<%= form_with scope: :cheese, url: cheeses_path, local: true do |form| %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :milk_type %><br>
    <%= form.text_area :milk_type %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
 
  <p>
    <%= form.label :image_url %><br>
    <%= form.text_area :image_url %>
  </p>
  <p>
    <%= form.label :stank_level %><br>
    <%= form.text_field :stank_level %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', cheeses_path %>