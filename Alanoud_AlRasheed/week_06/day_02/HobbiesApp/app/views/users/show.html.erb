
<p>Name: <%= @user.name %></p>
<p>Age: <%= @user.age %></p>
<p>Gender: <%= @user.gender %></p>



<h3>This user has <%=  pluralize @user.hobbies.length, "hobby" %></h3>

<h3>Hobbies that interest this user</h3>
<% @user.hobbies.uniq.each do |h| %>
<li><%= link_to h.name, h %></li>
<% end %>

<h3>Categories that interest this user</h3>
<% @user.hobbies.uniq.each do |h| %>
<li><%= link_to h.category, h %></li>
<% end %>

<br>
<br>
<p><%= link_to 'Edit', edit_user_path(@user) %> </p>
<p><%= link_to("Delete", "/users/#{@user.id}", method: "delete") %> </p>