<%= form_for @recipe do |f| %>
<div>
<%= f.label :title %> <br>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :ingredients %> <br>
<%= f.text_area :ingredients %>
</div>
<div>
<%= f.label :method %> <br>
<%= f.text_area :method %>
</div>
<div>
<%= f.label :image %> <br>
<%= f.url_field :image %>
</div>
<div>
<%= f.label :image, "made by?" %> <br>
<%= f.collection_select :chef_id, Chef.all,:id, :name  %>
</div>
<%= f.submit %>
<% end %>