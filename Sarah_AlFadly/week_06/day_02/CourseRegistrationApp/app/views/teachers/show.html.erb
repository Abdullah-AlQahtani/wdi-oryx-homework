<h2><%= @teacher.name %></h2>

<h3>This teacher teaches these courses</h3>
<ul>
<% @teacher.courses.each do |course| %>
<li><%= link_to course.name, course_path(course) %></li>
<% end %>
</ul>

<hr>

<p><%= link_to("Edit Teacher", edit_teacher_path(@teacher)) %></p>
<p><%= link_to("Delete Teacher", teacher_path(@teacher), method: :delete) %></p>